{{#if containerless}}
  {{#liquid-versions value=(readonly attrs.value) name=helperName
                       use=use renderWhenFalse=hasInverse class=class as |valueVersion|}}
    {{#if valueVersion}}
      {{yield}}
    {{else}}
      {{lf-yield-inverse}}
    {{/if}}
  {{/liquid-versions}}
{{else}}
  {{#liquid-container
      class=class
      growDuration=growDuration
      growPixelsPerSecond=growPixelsPerSecond
      growEasing=growEasing
      enableGrowth=enableGrowth
      as |container|}}
    {{#liquid-versions value=(readonly attrs.value) notify=container name=helperName
                       use=use renderWhenFalse=hasInverse as |valueVersion|}}
      {{#if valueVersion}}
        {{yield}}
      {{else}}
        {{lf-yield-inverse}}
      {{/if}}
    {{/liquid-versions}}
  {{/liquid-container}}
{{/if}}
